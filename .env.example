# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-anon-key
SUPABASE_SECRET_KEY=your-service-role-key

# Authentication
# JWT secret - must be at least 32 characters
JWT_SECRET=your-secret-key-at-least-32-characters-long

# Signup code - optional, leave empty to allow signups without code
SIGNUP_CODE=

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Gemini AI (for email analysis)
GEMINI_API_KEY=your-gemini-api-key

# Akros DB (Supernova) - for Akros products page
AKROS_SUPABASE_URL=https://your-akros-project.supabase.co
AKROS_SUPABASE_SERVICE_KEY=your-akros-service-role-key

# Ryuha Study - Email reminder recipient
RYUHA_REMINDER_EMAIL=your-email@example.com

# Cron job secret (for secure API calls)
CRON_SECRET=your-cron-secret-key
